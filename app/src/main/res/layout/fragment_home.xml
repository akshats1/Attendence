<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.attendance_master.HomeFragment"
    android:background="@drawable/college">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_weight="2"
            android:layout_margin="2dp"
            android:src="@drawable/moorti"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:textSize="20dp"

            android:textAlignment="center"
            android:text="BPIT\n\nBPIT (Bhagwan Parshuram Institute of Technology) is affiliated to GGSIPU and it is a 'A' Grade Institute.\nBPIT have experienced faculty divided into four Departments ( CSE , ECE , IT , EEE )"/>
    </LinearLayout>

</FrameLayout>
