<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/studyback"
    tools:context="com.example.hp.attendance_master.StudyLinkFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarFadeDuration="0"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:scrollbars="vertical"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Tutorialspoint -"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/tutpoint"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/tutorialspoint" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tutpoint"
                android:layout_margin="4dp"
                android:text="NPTEL -"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/nptel"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/nptellogo" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/nptel"
                android:layout_margin="4dp"
                android:text="Geeks For Geeks -"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/geeks"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:background="@drawable/geeksforgeeks"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/geeks"
                android:layout_margin="4dp"
                android:text="Coursera Courses -"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/cousera"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:background="@drawable/coursera"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="2dp"/>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
